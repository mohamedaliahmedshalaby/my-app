<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/custom_shape"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="180dp">
            <ImageView
                android:layout_width="150dp"
                android:src="@drawable/apple"
                android:layout_height="200dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Apple"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_margin="30sp"
                android:drawableRight="@drawable/ic_baseline_favorite_border_24"
                android:drawablePadding="90dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/custom_shape"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="180dp">
            <ImageView
                android:layout_width="150dp"
                android:src="@drawable/pineapple"
                android:layout_height="200dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="pineapple"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_margin="30sp"
                android:drawableRight="@drawable/ic_baseline_favorite_border_24"
                android:drawablePadding="50dp"
                android:layout_height="180dp"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/custom_shape"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="180dp">
            <ImageView
                android:layout_width="145dp"
                android:src="@drawable/watermelon"
                android:layout_height="200dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="watermleon"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_margin="30sp"
                android:drawableRight="@drawable/ic_baseline_favorite_border_24"
                android:drawablePadding="40dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/custom_shape"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_height="180dp">
            <ImageView
                android:layout_width="140dp"
                android:layout_weight="1"
                android:src="@drawable/strawberries"
                android:layout_height="200dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="strawbery"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="30sp"
                android:drawableRight="@drawable/ic_baseline_favorite_border_24"
                android:drawablePadding="80dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/custom_shape"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="180dp">
            <ImageView
                android:layout_width="150dp"
                android:src="@drawable/mango"
                android:layout_height="180dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="mango"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_margin="30sp"
                android:drawableRight="@drawable/ic_baseline_favorite_border_24"

                android:drawablePadding="90dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
