<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/stings_layout"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:background="#FF5722"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30sp"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_baseline_menu_24"
        android:paddingLeft="20dp"

        />
    <TextView
        android:id="@+id/edidt_profile"
        android:layout_width="match_parent"
        android:text="Edit Profile"
        android:drawableLeft="@drawable/ic_home_24"
        android:drawablePadding="20dp"
        android:textSize="30sp"
        android:textColor="#FF5722"
        android:textStyle="italic"
        android:drawableRight="@drawable/ic_next_24"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_shape"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="Change Language"
        android:drawableLeft="@drawable/ic_home_24"
        android:drawablePadding="20dp"
        android:textSize="30sp"
        android:textColor="#FF5722"
        android:textStyle="italic"
        android:drawableRight="@drawable/ic_next_24"
        android:layout_marginTop="30dp"
        android:id="@+id/change_lang"
        android:background="@drawable/custom_shape"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="Contact Us"
        android:drawableLeft="@drawable/ic_home_24"
        android:drawablePadding="20dp"
        android:textSize="30sp"
        android:textColor="#FF5722"
        android:textStyle="italic"
        android:id="@+id/contact_us"
        android:drawableRight="@drawable/ic_next_24"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_shape"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="Share App"
        android:drawableLeft="@drawable/ic_home_24"
        android:drawablePadding="20dp"
        android:textSize="30sp"
        android:textColor="#FF5722"
        android:textStyle="italic"
        android:drawableRight="@drawable/ic_next_24"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_shape"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="Rate App"
        android:drawableLeft="@drawable/ic_home_24"
        android:drawablePadding="20dp"
        android:textSize="30sp"
        android:textColor="#FF5722"
        android:textStyle="italic"
        android:drawableRight="@drawable/ic_next_24"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_shape"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:text="Log Out"
        android:drawableLeft="@drawable/ic_home_24"
        android:drawablePadding="20dp"
        android:textSize="30sp"
        android:textColor="#FF5722"
        android:textStyle="italic"
        android:drawableRight="@drawable/ic_next_24"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_shape"
        android:layout_height="wrap_content"/>
</LinearLayout>